<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerOptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterOptions">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/whatsapp_image_2023_08_25_at_10_51_42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/bntRegisterDueño"
        android:layout_width="296dp"
        android:layout_height="76dp"
        android:backgroundTint="#009688"
        android:text="Dueño"
        android:textColorHighlight="#009688"
        android:textColorLink="#009688"
        android:textSize="24sp"
        app:icon="@drawable/icons8person30"
        app:iconSize="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698"
        app:rippleColor="#009688" />

    <Button
        android:id="@+id/btnRegisterPaseador"
        android:layout_width="288dp"
        android:layout_height="81dp"
        android:backgroundTint="#009688"
        android:text="Paseador"
        android:textColorHighlight="#009688"
        android:textColorLink="#009688"
        android:textSize="24sp"
        app:icon="@drawable/icons8pet50paseadorlist"
        app:iconSize="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478"
        app:rippleColor="#009688" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="63dp"
        android:fontFamily="sans-serif"
        android:text="SAFEPET"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />
