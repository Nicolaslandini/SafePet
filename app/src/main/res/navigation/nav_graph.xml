<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="fragments.Login"
        android:label="fragment_first"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_firstFragment_to_registerOptions"
            app:destination="@id/registerOptions" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="fragments.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/registerOptions"
        android:name="fragments.RegisterOptions"
        android:label="fragment_register_options"
        tools:layout="@layout/fragment_register_options" >
        <action
            android:id="@+id/action_registerOptions_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
</navigation>